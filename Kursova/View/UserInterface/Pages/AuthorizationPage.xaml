<Page x:Class="Kursova.View.UserInterface.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursova.View.UserInterface.Pages"
      xmlns:userControls="clr-namespace:Kursova.View.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*" MaxHeight="200" MinHeight="100" />
                <RowDefinition Height="15*" MaxHeight="100" MinHeight="50" />
                <RowDefinition Height="35*" MaxHeight="200" MinHeight="100" />
            </Grid.RowDefinitions>
            <!--<Image Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,10" VerticalAlignment="Bottom"
               Height="auto" Width="auto" Source="/img/user.png"/>-->

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>

                <userControls:NewTextBlock x:Name="logTextBox" Placeholder="Логін" Grid.Row="0" Width="150" Height="20"/>
                <userControls:NewPasswordBlock x:Name="logPassBox" PlaceholderPass="Пароль" Grid.Row="1" Width="150" Height="20"/>

            </Grid>
            <Grid Grid.Row="2" Margin="0,25,0,0">
                <Button Width="100" Height="auto" HorizontalAlignment="Center" 
                    VerticalAlignment="Top" Padding="20,0" Content="Ввійти"
                    Click="Button_Authorization_Click" Background="Transparent" Foreground="Black"
                    BorderThickness="0" BorderBrush="Gray" FontWeight="Bold">
                </Button>
                <Button Width="90" Height="auto" HorizontalAlignment="Center"
                    VerticalAlignment="Top" Padding="10,0" Margin="0,30,0,0" Content="Реєстрація"
                    Background="Transparent" BorderThickness="0" BorderBrush="Gray"
                    Click="Button_Registration_Click"  Foreground="Black" FontWeight="Bold"/>

            </Grid>
        </Grid>
    </Grid>
</Page>
