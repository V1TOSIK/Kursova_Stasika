<UserControl x:Class="Kursova.View.UserControls.NewPasswordBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kursova.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="150">
    <Grid Background="White">
        <PasswordBox x:Name="inputPassword" Background="Transparent"
                         BorderBrush="Black" FontSize="14" PasswordChar="*"
                         PasswordChanged="inputPassword_PasswordChanged"/>
        <TextBlock x:Name="BackgroundText" Foreground="LightGray" Panel.ZIndex="-1"
                   FontWeight="Medium" FontSize="14" TextAlignment="Center"
                   Text="{Binding PlaceholderPass}"/>
    </Grid>
</UserControl>
