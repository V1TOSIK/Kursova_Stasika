<UserControl x:Class="Kursova.View.UserControls.GrayTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:Kursova.View.UserControls"
             mc:Ignorable="d" 
                     d:DesignHeight="20" d:DesignWidth="150" Background="White" BorderBrush="DarkGray" BorderThickness="2">
    <Grid>
        <TextBlock x:Name="GrayText" Text="{Binding GrayBind}" TextAlignment="Center" 
               FontWeight="Medium" Foreground="DarkGray" FontSize="14"
               />

    </Grid>
</UserControl>
